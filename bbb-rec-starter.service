[Unit]
Description=BBB Recording Starter
After=bbb-html5.service

[Install]
WantedBy=multi-user.target

[Service]
ExecStart=/usr/bin/env python3 manage.py runserver 0.0.0.0:8000
User=bbb-rec-starter
WorkingDirectory=/home/bbb-rec-starter/bbb_rec_starter
Restart=always
KillSignal=SIGKILL
StandardError=syslog
